@model CatalogItemViewModel
@if (User.IsInRole("Administrators"))
{
    <form asp-page="/Basket/Index" method="post">
        @*<img class="esh-catalog-thumbnail" src="@Model.PictureUri" />*@
        @*Currently,
            The couse name is a clickable button that takes the admin to the page where he can add the course to a student
            or to a teacher in the future
            we could add an additional button for admin to add the course to the student or to the teacher*@
        <input class="esh-catalog-button" type="submit" value="@Model.Name" />

        @*<div class="esh-catalog-price">
            <span>@Model.Price.ToString("N2")</span>
            </div>*@
        <input type="hidden" asp-for="@Model.Id" name="id" />
        <input type="hidden" asp-for="@Model.Name" name="name" />
        <input type="hidden" asp-for="@Model.PictureUri" name="pictureUri" />
        @*<input type="hidden" asp-for="@Model.Price" name="price" />*@
    </form>
}
else
{    
    <form asp-page="/Course/Index" method="post">        

        <input class="esh-catalog-button" type="submit" value="@Model.Name" />

        <input type="hidden" asp-for="@Model.Id" name="id" />
        <input type="hidden" asp-for="@Model.Name" name="name" />
        <input type="hidden" asp-for="@Model.PictureUri" name="pictureUri" />
    </form>
}


